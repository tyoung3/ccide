# ccide: wrapper for ccidew.  
#
#  ? AS_INIT from M4SH

CCIDELANG=C
BINDIR="@prefix@/bin"
PKGDATADIR=@pkgdatadir@
LANGSX="BASH BASIC C CH CC C++ CS EX JAVA QB VB"

Die() {
	echo "$0/DIE: $*"
	exit 1
}

Usage() {
	cat <<- EOF
	USAGE:
	   ccide -s [SKELETONSIZE] 
     	| ccide -V 
       	| ccide --help 
       	| ccide [-a] [-b] [-c COLUMNSIZE] [-d STUBSTRING1 STUBSTRING2] [-e] [-l]  
              	[-L LANG|?] [-m4] [-n] [-p PREFIX] [-q LEFTQUOTE RIGHTQUOTE] 
               	[-s SKELSIZE][-t] [-u] [-x] < STDIN > STDOUT 

EOF
}


if [ -z "$CCIDEW" ]; then
	if [ -x $BINDIR/ccidew.exe ]; then 	
		CCIDEW=$BINDIR/ccidew.exe
	elif [ -x ./ccidew.exe ]; then
		CCIDEW=`pwd`/ccidew.exe
	elif [ -x ../src/ccidew.exe ]; then	
		CCIDEW=`pwd`/../src/ccidew.exe
	elif [ -x $BINDIR/ccidew ]; then 	
		CCIDEW=$BINDIR/ccidew
	elif [ -x ./ccidew ]; then
		CCIDEW=`pwd`/ccidew
	elif [ -x ../src/ccidew ]; then	
		CCIDEW=`pwd`/../src/ccidew
	else
		Die Cannot file bin/ccidew
	fi
fi

#   Set m4 directory...  	
CWD=`pwd`
[ -f ../m4/ccide-CC.m4 ] && M4DIR=$CWD/../m4
[ -f m4/ccide-CC.m4 ] && M4DIR=$CWD/m4
[ -f /usr/share/ccide/ccide-CC.m4 ] && M4DIR=/usr/share/ccide
[ -z $CCIDE_M4DIR ] || M4DIR=$CCIDE_M4DIR;   # CCIDE_M4DIR overrides if specified:

while [[ $# > 0 ]]; do
	if [[ ("$1" == "-L") ]]; then
                CCIDELANG=`echo $2|tr [:lower:] [:upper:]`
		shift
	elif [[ ("$1" == "-m4") ]] ; then
		CCIDE_M4="yes"
	elif [[ ("$1" == "--help") ]] ; then
		Usage
		exit 1
	elif [[ ("$1" == "-V") ]] ; then
		echo "	ccide-@VERSION@-@RELEASE@"
		WC="$WC $1"
	else
		WC="$WC $1"
	fi
	shift
done

if [ "$CCIDE_M4" == "yes"  ]; then
	$CCIDEW -m4 $WC
	exit $?
fi

if [ "$CCIDELANG" == "C" ];  then
	$CCIDEW $WC 
	exit $?
fi

if [ "$CCIDELANG" == "?" ];  then
	echo "Ccide supported languages are: $LANGSX"
	exit 2
fi


if [ "$CCIDELANG" == "CH" ];  then
	$CCIDEW $WC 
	exit $?
fi

[ -f $M4DIR/ccide-${CCIDELANG}.m4 ] || Die Cannot find $M4DIR/ccide-${CCIDELANG}.m4

if [ "$CCIDELANG" == "BASH" ];  then
	      DELIM="-d '[[' ']]'" 
fi

if [ ! -f "$M4DIR/ccide-$CCIDELANG.m4" ]; then
	@ECHO@ "$M4DIR/ccide-$CCIDELANG.m4 not found"
	exit 1 
fi

if [ "$CCIDELANG" == "EX" ];  then
	$CCIDEW -L $CCIDELANG $WC	\
	| @M4@ "$M4DIR/ccide-$CCIDELANG.m4" "-"
	exit $?
fi

$CCIDEW -m4 $DELIM -L $CCIDELANG $WC 	\
	| @M4@ "$M4DIR/ccide-$CCIDELANG.m4" "-"

exit $?
